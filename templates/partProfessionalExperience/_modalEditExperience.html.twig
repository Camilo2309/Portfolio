<div class="bs-example">
    <h4><a href="#modalEditExperience{{ experience.id }}" data-toggle="modal" style="text-align: right"><i class="fas fa-edit" style="display: inline"></i></a></h4>
</div>

<div class="modal fade" id="modalEditExperience{{ experience.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modifier mon experience pro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form action="{{ path('editProfessionalExperience', { 'id' : experience.id}) }}" method="post" enctype="multipart/form-data">
                    <div style="margin: 0 30px">
                        <div class="form-group">
                            <label for="title">Titre</label>
                            <input type="text" name="title" id="title" class="form-control" placeholder="Titre..." value="{{ experience.title }}">
                        </div>

                        <div class="form-group">
                            <label for="dated">Date</label>
                            <input type="text" name="dated" id="dated" class="form-control" placeholder="Date..." value="{{ experience.dated }}">
                        </div>

                        <div class="form-group">
                            <label for="icone">Icone</label>
                            <input type="file" name="icone" id="icone" class="form-control" placeholder="Icone..." value="{{ experience.icone }}">
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button class="btn btn-theme btn-small" type="submit">Ajouter</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>